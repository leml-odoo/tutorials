<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{ controlPanel: { 'top-right' : false, 'bottom-right': false } }" className="'o_dashboard'">
            <t t-set-slot="layout-buttons">
                <button t-on-click="this.openCustomers" type="button" class="btn btn-primary" title="Customers">Customers</button>
                <button t-on-click="this.openLeads" type="button" class="btn btn-primary" title="Leads">Leads</button>
            </t>
            <t t-set-slot="control-panel-additional-actions" >
                <div class="p-0 ms-1 lh-sm d-flex align-items-center">
                    <i role="button" class="fa fa-cog" title="Configuration" t-on-click="this.openConfigurationDialog"/>
                </div>
            </t>
            <div class="d-flex flex-wrap gap-2" >
                <t t-foreach="items" t-as="item" t-key="item.id" t-if="data">
                    <DashboardItem t-if="!state.disabledItems.includes(item.id)">
                        <t t-set="itemProps" t-value="item.props ? item.props(data) : { 'data': data }" />
                        <t t-component="item.Component" t-props="itemProps" />
                    </DashboardItem>
                </t>
            </div>
        </Layout>
    </t>

    <t t-name="awesome_dashboard.config_dialog">
        <Dialog title="props.title">
            <t t-foreach="items" t-as="item" t-key="item.id">
                <CheckBox id="item.id" value="item.enabled" onChange="(ev) => this.onChange(ev, item)">
                    <t t-esc="item.description" />
                </CheckBox>
            </t>
            <t t-set-slot="footer">
                <button t-on-click="this.updateDisabledItems" class="btn btn-primary">Apply</button>
                <button t-on-click="() => this.props.close()" class="btn btn-secondary">Discard</button>
            </t>
        </Dialog>
    </t>

</templates>
