<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="awesome_dashboard.pie_chart_card">
        <div class="card-body text-center">
            <span class="d-flex align-items-center gap-3 justify-content-center" style="white-space: nowrap">
                <h5 class="card-title"> 
                    <t t-esc="props.title"/>
                </h5> 
            </span>
            <div class="card-content" >
                <PieChart sizes="props.values"/>
            </div>
        </div>
    </t>
</templates>
