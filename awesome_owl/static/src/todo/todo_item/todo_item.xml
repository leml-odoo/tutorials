<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.todo_item">
        <li class="d-flex gap-2 align-items-center my-1">
            <input type="checkbox" t-on-change="() => this.props.toggleState(this.props.todo)"/>
            <span class="col" t-att-class="{ 'text-muted text-decoration-line-through': props.todo.isCompleted }">
                    <t t-esc="props.index + 1"/>. 
                    <t t-esc="props.todo.description"/>
            </span>
            <span class="fa fa-trash opacity-50" role="button" t-on-click="() => props.removeTodo(props.index)"/>
        </li>
    </t>
</templates>
